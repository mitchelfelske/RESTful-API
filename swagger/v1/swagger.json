{
  "swagger": "2.0",
  "info": {
    "title": "API V1",
    "version": "v1"
  },
  "paths": {
    "/todos/{id}": {
      "get": {
        "summary": "Retrieves a Todo",
        "tags": [
          "Todo"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "type": "string",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Todo found",
            "schema": {
              "type": "object",
              "properties": {
                "title": {
                  "type": "string"
                },
                "created_by": {
                  "type": "string"
                }
              },
              "required": [
                "title",
                "created_by"
              ]
            }
          },
          "404": {
            "description": "Todo not found"
          }
        }
      }
    },
    "/todos": {
      "post": {
        "summary": "Creates a Todo",
        "tags": [
          "Todo"
        ],
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "todo",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "title": {
                  "type": "string"
                },
                "created_by": {
                  "type": "string"
                }
              },
              "required": [
                "title",
                "created_by"
              ]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Todo created"
          },
          "422": {
            "description": "Unprocessable Entity"
          }
        }
      }
    }
  }
}